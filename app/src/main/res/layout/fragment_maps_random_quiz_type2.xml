<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.macuser.takiken.MapsRandomQuizFragment"
    android:background="@drawable/blackboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView android:id="@+id/map_rq_type2_count"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:gravity="right"
            android:padding="5dp"
            android:textColor="#ffffffff" />

        <TextView android:id="@+id/map_rq_type2_sentence"
            android:layout_width="300dp"
            android:layout_height="230dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/book"
            android:padding="40dp"
            android:layout_marginBottom="20dp"
            android:inputType="text|textMultiLine"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:id="@+id/map_rq_type2_answer"
            android:layout_gravity="center_horizontal|top"
            android:hint="@string/answer_txt"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:paddingLeft="35dp"
            android:background="@drawable/btn_red" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn"
            android:id="@+id/map_rq_type2_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="34dp" />

    </LinearLayout>
</LinearLayout>
